  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^14.14.25",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.4"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.4.8",
    "@types/mongoose": "^5.10.3",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "mongoose": "5.10.18",
    "telegraf": "^4.0.3",
    "winston": "^3.3.3"
  }
}
