{
  "name": "telegram-kgbtrbot",
  "version": "1.0.0-draft.0",
  "main": "dist/index.js",
  "author": "Asim-Tahir",
  "license": "MIT",
  "scripts": {
    "start": "yarn build-ts && node dist/",
    "dev": "concurrently -k -i -p \"[{name}]\" -n \"Node,TypeScript\" -c \"green.bold,blue.bold\" \"yarn watch-js\" \"yarn watch-ts\"",
